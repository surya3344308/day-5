#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int rows;
    scanf("%d",&rows);
    for(int a=1;a<=rows;a++)
    {
        for(int b=1;b<=rows;b++)
        {
            if((a+b)%2==0)
            printf("1");
        else
            printf("0");
        }
        printf("\n");
        
    }

                                            
    return 0;
}
